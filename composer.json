{
    "name": "drupal/drupal_template",
    "description": "Drupal 8 php 7.3",
    "type": "drupal-module",
    "license": "GPL-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Pol Dellaiera",
            "homepage": "https://www.drupal.org/u/pol",
            "role": "Author"
        }
    ],
    "require": {
        "PHP": ">=7.1"
    },
    "require-dev": {
        "behat/mink": "1.7.x-dev",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "1.3.x-dev",
        "composer/installers": "~1.5",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5.2",
        "drupal/coder": "^8.3",
        "drupal/config_split": "^1",
        "drupal/core": "8.7.x-dev",
        "drupal/ctools": "^3.0",
        "drupal/drupal-extension": "^4.0.0@alpha",
        "drupal/paragraphs": "^1",
        "drupol/drupal-conventions": "^1",
        "drush/drush": "~9.0@stable",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mglaman/phpstan-drupal": "dev-master",
        "phpspec/prophecy": "^1.4",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11.12",
        "phptaskman/drupal": "^1",
        "phpunit/phpunit": "^6.5",
        "symfony/browser-kit": "~3.0||~4.0",
        "symfony/css-selector": "^3.4.0",
        "symfony/debug": "^3.4.0",
        "symfony/phpunit-bridge": "^3.4.3",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "post-update-cmd": "./vendor/bin/taskman drupal:site-setup",
        "post-install-cmd": "./vendor/bin/taskman drupal:site-setup",
        "grumphp": "./vendor/bin/grumphp run"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"]
        }
    },
    "config": {
        "sort-packages": true
    }
}
